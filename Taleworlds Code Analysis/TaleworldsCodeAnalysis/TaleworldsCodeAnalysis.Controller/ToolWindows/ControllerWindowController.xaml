<UserControl x:Class="TaleworldsCodeAnalysis.Controller.ControllerWindowController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             Name="ControllerWindow"
             LostFocus="UserControl_GotFocus"
             GotFocus="UserControl_GotFocus"
            >

    <Grid>
        <StackPanel Orientation="Vertical">
            <Label x:Name="lblHeadline"
                   Margin="10"
                   HorizontalAlignment="Center" Content="Taleworlds Code Analysis Settings"
                   FontSize="17"/>
            <Label Content="Name Checkers" FontSize="15"/>
            <CheckBox Name="ClassNameCheckerEnabled" Content="Class Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="FieldNameCheckerEnabled" Content="Field Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="InterfaceNameCheckerEnabled" Content="Interface Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="LocalNameCheckerEnabled" Content="Local Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="MethodNameCheckerEnabled" Content="Method Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="ParameterNameCheckerEnabled" Content="Parameter Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="PropertyNameCheckerEnabled" Content="Property Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="TemplateParameterNameCheckerEnabled" Content="Template Parameter Name Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <Label Content="Inheritance" FontSize="15"/>
            <CheckBox Name="AbstractClassCheckerEnabled" Content="Abstract Class Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="DepthOfInheritanceCheckerEnabled" Content="Depth of Inheritance Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
            <CheckBox Name="SealedOverrideCheckerEnabled" Content="Sealed Override Checker Enabled" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="False"/>
        </StackPanel>
    </Grid>
</UserControl>
