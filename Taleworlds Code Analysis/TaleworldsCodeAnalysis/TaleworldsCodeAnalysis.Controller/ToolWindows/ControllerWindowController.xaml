<UserControl x:Class="TaleworldsCodeAnalysis.Controller.ControllerWindowController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit" 
             xmlns:components="clr-namespace:TaleworldsCodeAnalysis.Controller.ToolWindows.Components"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             Name="ControllerWindow"
             LostFocus="UserControl_GotFocus"
             GotFocus="UserControl_GotFocus" ClipToBounds="True" Loaded="ControllerWindow_Loaded"
            >

    <StackPanel VerticalAlignment="Stretch">
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel>
                <Label x:Name="lblHeadline"
                   HorizontalAlignment="Center" Content="Taleworlds Code Analysis Settings"
                   FontSize="17"/>
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <TextBlock Text="Severity Presets" FontSize="12" VerticalAlignment="Center" Width="300" Padding="5,0,0,0" />
                        </Grid>
                        <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
                            <ComboBox Name ="TW20000" Width="100" FontSize="12" HorizontalAlignment="Right" SelectedValue="None" SelectedIndex="0">
                                <ComboBoxItem Name="None" Content="Severity.None" FontSize="12"></ComboBoxItem>
                                <ComboBoxItem Name="Warning" Content="Severity.Warning" FontSize="12"></ComboBoxItem>
                                <ComboBoxItem Name="Error" Content="Severity.Error" FontSize="12"></ComboBoxItem>
                                <ComboBoxItem Name="Custom" Content="Custom" FontSize="12"></ComboBoxItem>
                            </ComboBox>
                        </Grid>

                    </StackPanel>
                </Border>
            </StackPanel>
            
        </Grid>

        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label Content="Name Checkers" FontSize="15"/>

                <components:SeverityController 
                 Title="Class Name Checker Enabled"
                 x:Name="TW2000"
                 />

                <components:SeverityController 
                 Title="Field Name Checker Enabled"
                 x:Name="TW2002"
                 />

                <components:SeverityController 
                 Title="Interface Name Checker Enabled"
                 x:Name="TW2003"
                 />

                <components:SeverityController 
                 Title="Local Name Checker Enabled"
                 x:Name="TW2004"
                 />

                <components:SeverityController 
                 Title="Method Name Checker Enabled"
                 x:Name="TW2005"
                 />

                <components:SeverityController 
                 Title="Parameter Name Checker Enabled"
                 x:Name="TW2006"
                 />

                <components:SeverityController 
                 Title="Property Name Checker Enabled"
                 x:Name="TW2007"
                 />

                <components:SeverityController 
                 Title="Template Parameter Name Checker Enabled"
                 x:Name="TW2008"
                 />

                <Label Content="Inheritance Checkers" FontSize="15"/>

                <components:SeverityController 
                 Title="Abstract Class Checker Enabled"
                 x:Name="TW2100"
                 />

                <components:SeverityController 
                 Title="Depth of Inheritance Checker Enabled"
                 x:Name="TW2101"
                 />

                <components:SeverityController 
                 Title="Sealed Override Checker Enabled"
                 x:Name="TW2102"
                 />

                <Label Content="Accesibility Checkers" FontSize="15"/>

                <components:SeverityController 
                 Title="Class Accesibility Checker Enabled"
                 x:Name="TW2001"
                 />

                <components:SeverityController 
                 Title="Class Accesibility Checker Enabled"
                 x:Name="TW2200"
                 />

                <Label Content="Other Checkers" FontSize="15"/>
                <components:SeverityController 
                 Title="Named Parameter Checker Enabled"
                 x:Name="TW2201"
                 />

                <components:SeverityController 
                 Title="Named Parameter Checker Enabled"
                 x:Name="TW2202"
                 />

                <components:SeverityController 
                 Title="Var Keyword Checker Enabled"
                 x:Name="TW2204"
                 />

                <components:SeverityController 
                 Title="Immutable Structs Checker Enabled"
                 x:Name="TW2205"
                 />
            </StackPanel>

        </Grid>

    </StackPanel>

</UserControl>
